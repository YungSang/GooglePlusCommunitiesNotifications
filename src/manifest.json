{
	"name"             : "Google+ Communities Notifications",
	"version"          : "0.7.0",
	"manifest_version" : 2,
	"description"      : "Get notifications of Google+ Communities",
	"icons"            : {
		"16"             : "icons/icon16.png",
		"48"             : "icons/icon48.png",
		"128"            : "icons/icon128.png"
	},
	"browser_action"   : {
		"default_icon"   : "icons/icon19.png",
		"default_title"  : "Google+ Communities Notifications",
		"default_popup"  : "popup.html"
	},
	"background"       : {
		"scripts"        : [
			"js/jquery-1.6.4.min.js",
			"js/main.js"
		]
	},
	"minimum_chrome_version" : "21.0",
	"permissions"      : [
		"tabs",
		"cookies",
		"https://plus.google.com/*"
	],
	"incognito"        : "split",
	"update_url"       : "http://yungsang.com/google+/communitiesnotifications/chrome/update.xml",
	"web_accessible_resources" : [
		"sandbox.html"
	],
	"sandbox"          : {
		"pages"          : [
			"sandbox.html"
		]
	}
}